#include <iostream>
using namespace std;

int triangularNumber(int n) {
    if (n == 1)
        return 1;
    return n + triangularNumber(n - 1);
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    cout << "The " << n << "th triangular number is " << triangularNumber(n) << endl;
    return 0;
}
