#include <iostream>
using namespace std;

double harmonicNumber(int n) {
    if (n == 1)
        return 1.0;
    return 1.0 / n + harmonicNumber(n - 1);
}

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    cout << "Harmonic number is: " << harmonicNumber(n) << endl;
    return 0;
}
